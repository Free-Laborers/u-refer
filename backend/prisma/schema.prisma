generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id             String    @id @default(uuid())
  first_name     String
  last_name      String
  email          String    @unique
  company_id     String
  position_title String
  created_date   DateTime  @default(now())
  resigned_date  DateTime?
  is_manager     Boolean
  manager_id     Int?
  password       String
  company        Company   @relation(fields: [company_id], references: [id])
}

model Company {
  id        String     @id @default(uuid())
  title     String     @unique
  employees Employee[]
}
